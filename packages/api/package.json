{
  "name": "@repo/api",
  "version": "1.0.0",
  "description": "tRPC API for the repo in Turbo Repo",
  "keywords": [
    "turbo",
    "repo",
    "api",
    "trpc"
  ],
  "author": "@codingwithmanny",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/root.d.ts",
      "default": "./src/root.ts"
    },
    "./trpc": {
      "types": "./dist/trpc.d.ts",
      "default": "./src/trpc.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "eslint": "^9.14.0",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@repo/auth": "workspace:^",
    "@repo/db": "workspace:^",
    "@trpc/server": "11.0.0-rc.621",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  }
}
